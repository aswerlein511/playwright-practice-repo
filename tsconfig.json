{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "dist",
    "types": ["vitest/globals", "node"]
  },
  "exclude": ["dist", "node_modules", "playwright-report", "test-results"],
  "include": ["tests", "pages", "playwright.config.ts", "vitest.config.ts"]

}
